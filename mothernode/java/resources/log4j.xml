<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!--
		Uncomment if you are using the logback plugin for eclipse
	<consolePlugin />
		-->

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%t] %c{1}.%M(%L) | %m%n" />
		</layout>
	</appender>

	<logger name="com.orbswarm">
		<level value="warn" />
	</logger>

	<logger name="com.orbswarm.swarmcon.path.SelectableList">
		<level value="warn" />
	</logger>
	
	<logger name="com.orbswarm.swarmcon.path.Dance">
		<level value="warn" />
	</logger>
	
	<logger name="com.orbswarm.swarmcon.model.SimModel">
		<level value="warn" />
	</logger>

  <logger name="com.orbswarm.swarmcon.swing.BlockPathBuilder">
    <level value="debug" />
  </logger>

  <logger name="com.orbswarm.swarmcon.swing.DanceBuilder">
    <level value="debug" />
  </logger>

	<logger name="com.orbswarm.swarmcon.path.BlockPath">
		<level value="warn" />
	</logger>

	<logger name="com.orbswarm.swarmcon.SwarmCon">
		<level value="warn" />
	</logger>

	<logger name="com.orbswarm.swarmcon.SwarmProperties">
		<level value="warn" />
	</logger>

	<logger name="com.orbswarm.swarmcon.view.Renderer">
		<level value="warn" />
	</logger>

	<logger name="com.orbswarm.swarmcon.view.OrbRenderer">
		<level value="warn" />
	</logger>

	<logger name="com.orbswarm.swarmcon.orb.Orb">
		<level value="warn" />
	</logger>

	<logger name="com.orbswarm.swarmcon.path.CurveBlock">
		<level value="warn" />
	</logger>

  <logger name="com.orbswarm.swarmcon.view.ARenderer">
    <level value="warn" />
  </logger>

  <logger name="com.orbswarm.swarmcon.store.FileStore">
    <level value="warn" />
  </logger>

  <logger name="com.orbswarm.swarmcon.model.MotionModel">
    <level value="warn" />
  </logger>

  <logger name="com.orbswarm.swarmcon.model.SimModel">
    <level value="warn" />
  </logger>

	<root>
		<level value="debug" />
		<appender-ref ref="CONSOLE" />
	</root>

</log4j:configuration>
